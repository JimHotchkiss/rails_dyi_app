<p style="color:red"><%= flash[:notice]%></p>
<div class="container">
  <p style="color:red">Sign up:</p>
  <%= bootstrap_form_for(@user) do |f| %>
    <%= f.text_field :username %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit 'Sign up'%>
  <% end %>
</div>
