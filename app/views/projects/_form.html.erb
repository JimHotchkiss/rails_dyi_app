<div class="container">

    <%= f.text_field :title %>
    <%= f.text_area :description %>

    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

    <%= f.fields_for :categories, @project.categories.build do |categories_fields| %>
      <%= f.label "Category:" %>
      <%= categories_fields.text_field :name %>
    <% end %>

    <%= f.submit %>

</div>
